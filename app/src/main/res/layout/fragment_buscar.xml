<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/buscarFragmentVista"
    tools:context=".features.buscar.BuscarFragment">

    <Button
        android:id="@+id/buscar_boton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/ic_buscar_24dp"
        android:padding="16dp"
        android:text="Buscar un evento"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoriasBuscar">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buscarFragmentVistaLista">

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
